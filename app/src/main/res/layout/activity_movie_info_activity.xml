<?xml version="1.0" encoding="utf-8"?>
<merge
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_marginTop="@dimen/top_margin_default"
        android:layout_width="match_parent"
        android:layout_height="@dimen/black_line_separator"
        android:paddingStart="@dimen/top_margin_default"
        android:paddingEnd="@dimen/top_margin_default"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/over_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin_default"
        android:layout_marginStart="@dimen/alrger_text_margin_start"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="@string/overview_string"/>

    <TextView
        android:id="@+id/mo_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin_default"
        android:layout_marginStart="@dimen/alrger_text_margin_start"
        android:textAlignment="textStart"
        tools:text="Movie Overview" />

    <View
        android:layout_marginTop="@dimen/top_margin_default"
        android:layout_width="match_parent"
        android:layout_height="@dimen/black_line_separator"
        android:paddingStart="@dimen/top_margin_default"
        android:paddingEnd="@dimen/top_margin_default"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/gen_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/alrger_text_margin_start"
        android:layout_marginTop="@dimen/top_margin_default"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="@string/genres_string" />

    <TextView
        android:id="@+id/genre_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/alrger_text_margin_start"
        android:layout_marginTop="@dimen/top_margin_default"
        android:textAlignment="textStart"
        android:textStyle="bold"
        tools:text="Genre" />

    <View
        android:layout_marginTop="@dimen/top_margin_default"
        android:layout_width="match_parent"
        android:layout_height="@dimen/black_line_separator"
        android:paddingStart="@dimen/top_margin_default"
        android:paddingEnd="@dimen/top_margin_default"
        android:background="@android:color/darker_gray"/>

</merge>

